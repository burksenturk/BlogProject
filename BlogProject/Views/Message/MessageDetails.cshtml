@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "MessageDetaiils";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<br />

@Html.Label("Mesaj ID")
@Html.TextBoxFor(x => x.MessageID, new {@class = "form-control" , @disabled = "disabled"})
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x=>x.Subject, new {@class = "form-control", @readonly="readonly"})
<br />
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x=>x.MessageDetails,15,3, new {@class = "form-control" , @readonly="readonly"})
<br />
<button class="btn btn-success">Mesajlara Dön</button>


