@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil bilgileri Düzenleme</h4>
                <br/>
                @Html.HiddenFor(x=>x.WriterID,new { @class="form-control" })
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Adı Soyadı</label>
                        @Html.TextBoxFor(x=>x.WriterName,new { @class="form-control" })
                        @Html.ValidationMessageFor(x=>x.WriterName,"", new {@class="text-danger"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.WriterMail,new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Parola</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WiterPassword" name="pass1" placeholder="Password">
                        @Html.ValidationMessageFor(x=>x.WiterPassword)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Parolayı Doğrulayın</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WiterPassword" name="pass2" placeholder="Password">
                        <p class="text text-danger">@ViewBag.hata</p>
                    </div>
                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Yükle</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3 ,new { @class="form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>

}