@using BlogProjectUI.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Rol ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>

    <button class="btn btn-info">Rolü Güncelle</button>
</form>