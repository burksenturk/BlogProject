@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Kategori Oluştur</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post)) @*bunu yapınca textboxfor kullandık*@
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"", new {@class="text-danger"})
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x=>x.CategoryDescirption,15,3,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryDescirption,"", new {@class="text-danger"})
    <br />
    <button class="btn btn-info">Kategori Kaydet</button>
}

